
{
  "entities": {
    "BlogPost": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "BlogPost",
      "type": "object",
      "description": "Represents a blog post with its content, metadata, and relationships.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the blog post. (Primary Key)"
        },
        "title": {
          "type": "string",
          "description": "Title of the blog post."
        },
        "slug": {
          "type": "string",
          "description": "Slug for the blog post, used in the URL."
        },
        "author": {
          "type": "string",
          "description": "Name of the author of the blog post."
        },
        "content": {
          "type": "string",
          "description": "The main content of the blog post, likely stored as HTML or Markdown."
        },
        "coverImage": {
          "type": "string",
          "description": "URL or path to the cover image for the blog post."
        },
        "date": {
          "type": "string",
          "description": "Date and time when the blog post was published.",
          "format": "date-time"
        },
        "tags": {
          "type": "array",
          "description": "Tags associated with the blog post.",
          "items": {
            "type": "string"
          }
        },
        "excerpt": {
            "type": "string",
            "description": "A short excerpt of the blog post."
        },
        "coverImageHint": {
            "type": "string",
            "description": "A hint for AI to find a relevant cover image."
        }
      },
      "required": [
        "id",
        "title",
        "slug",
        "author",
        "content",
        "coverImage",
        "date"
      ]
    },
    "AboutContent": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "AboutContent",
      "type": "object",
      "description": "Stores the content for the About Me page and other site settings.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "imageUrl": { "type": "string" },
        "bio": { "type": "string" },
        "content": { "type": "string" },
        "twitterUrl": { "type": "string" },
        "githubUrl": { "type": "string" },
        "linkedinUrl": { "type": "string" },
        "backgroundColor": { "type": "string" },
        "blogFontColor": { "type": "string" },
        "gradientColor1": { "type": "string" },
        "gradientColor2": { "type": "string" },
        "gradientColor3": { "type": "string" },
        "gradientColor4": { "type": "string" },
        "heroImageUrl": { "type": "string" },
        "heroTitle": { "type": "string" },
        "heroSubtitle": { "type": "string" }
      },
      "required": ["id", "name", "imageUrl", "bio", "content"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/blogs/{blogId}",
        "definition": {
          "entityName": "BlogPost",
          "schema": {
            "$ref": "#/entities/BlogPost"
          },
          "description": "Stores blog post data. The document ID serves as the blogId.",
          "params": [
            {
              "name": "blogId",
              "description": "Unique identifier for the blog post."
            }
          ]
        }
      },
      {
        "path": "/settings/about",
        "definition": {
            "entityName": "AboutContent",
            "schema": {
                "$ref": "#/entities/AboutContent"
            },
            "description": "Stores the content for the about page."
        }
      }
    ]
  }
}
